  <div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">
  <%= render 'user', book: @book,user: @user %>
  </div>
  <div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
    <tr>
     <th>Image</th>
     <th>Name</th>
     <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
     <tr>
      <% @users.each do |user| %>
     <td><% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, size: "100x100" %>
      <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
     </td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user.id)%></td>
    </tr>
    <% end %>
   </tbody>
  </table>
 </div>
 </div>
 </div>
 
  
 
 
 
 
 

 
     
 
     