<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h1>Editing Book</h1>
  
  <label>Title</label>
  <%= form_with model: @book do |f| %>
  <div class="form-group">
  <%= f.text_field :title %>
  </div>
  <label>Opinion</label> 
  <div class="form-group">
  <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Update Book' ,class: "btn btn-success" %>
  <% end %>
<%= link_to 'Show', book_path(@book.id) %>|
<%= link_to 'Back', books_path %>

 </div>
 </div>
 </div>